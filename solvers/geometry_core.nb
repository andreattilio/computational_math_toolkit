             RowBox[{"(", 
              RowBox[{
               RowBox[{"vertices", "[", 
                RowBox[{"[", "i", "]"}], "]"}], "-", "center"}], ")"}]}]}], ",", 
           RowBox[{"{", 
            RowBox[{"i", ",", "1", ",", 
             RowBox[{"Length", "[", "vertices", "]"}]}], "}"}]}], "]"}], ",", 
         
         RowBox[{"{", "center", "}"}]}], "]"}]}], ";", "\[IndentingNewLine]", 
      
      RowBox[{"xMin", "=", 
       RowBox[{
        RowBox[{"Min", "[", 
         RowBox[{"allPoints", "[", 
          RowBox[{"[", 
           RowBox[{"All", ",", "1"}], "]"}], "]"}], "]"}], "-", "1"}]}], ";", 
      "\[IndentingNewLine]", 
      RowBox[{"xMax", "=", 
       RowBox[{
        RowBox[{"Max", "[", 
         RowBox[{"allPoints", "[", 
          RowBox[{"[", 
           RowBox[{"All", ",", "1"}], "]"}], "]"}], "]"}], "+", "1"}]}], ";", 
      "\[IndentingNewLine]", 
      RowBox[{"yMin", "=", 
