            RowBox[{"{", 
             RowBox[{"i", ",", "1", ",", 
              RowBox[{"Length", "[", "vertices", "]"}]}], "}"}]}], "]"}], ",", 
          RowBox[{"(*", 
           RowBox[{"Enlarged", " ", "vertices"}], "*)"}], 
          RowBox[{"{", 
